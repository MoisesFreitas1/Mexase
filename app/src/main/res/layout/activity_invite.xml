<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_banner"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@drawable/gelo">
    <TextView
        android:id="@+id/textoconvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:text="Teste sua condição física\nAs perguntas a seguir analisarão sua condição física. Responda 'Sim' ou 'Não'  a cada questionamento."
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:fontFamily="cursive"
        android:layout_margin="20sp"/>
    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:id="@+id/start"
        android:src="@drawable/bstart"/>
</LinearLayout>